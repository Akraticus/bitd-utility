{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "node",
            "request": "launch",
            "name": "Street construction",
            "program": "${workspaceFolder}\\Core\\StreetLoadTest.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Building construction",
            "program": "${workspaceFolder}\\Core\\BuildingLoadTest.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Forgotten God construction",
            "program": "${workspaceFolder}\\Core\\ForgottenGodLoadTest.js"
        },
        {
            "name": "Attach to Node Functions",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "preLaunchTask": "func: host start"
        },
        {
            "name":"Current file",
            "type":"node",
            "request":"launch",
            "program": "${file}"
        },
        
        // https://markuseliasson.se/article/debugging-jest-code/
        {
            "name": "Jest Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "stopOnEntry": false,
            "args": ["--runInBand"],
            "cwd": "${workspaceRoot}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}